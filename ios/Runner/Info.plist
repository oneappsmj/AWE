<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>CFBundleDevelopmentRegion</key>
  <string>$(DEVELOPMENT_LANGUAGE)</string>
  <key>CFBundleDisplayName</key>
  <string>Downloadsplatform</string>
  <key>CFBundleExecutable</key>
  <string>$(EXECUTABLE_NAME)</string>
  <key>CFBundleIdentifier</key>
  <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
  <key>CFBundleInfoDictionaryVersion</key>
  <string>6.0</string>
  <key>CFBundleName</key>
  <string>downloadsplatform</string>
  <key>CFBundlePackageType</key>
  <string>APPL</string>
  <key>CFBundleShortVersionString</key>
  <string>$(FLUTTER_BUILD_NAME)</string>
  <key>CFBundleSignature</key>
  <string>DWNL</string>
  <key>CFBundleVersion</key>
  <string>$(FLUTTER_BUILD_NUMBER)</string>
  <key>LSRequiresIPhoneOS</key>
  <true/>

  <!-- Specify iPhone only -->
  <key>UIDeviceFamily</key>
  <array>
    <integer>1</integer>
  </array>

  <!-- Export Options -->
  <key>method</key>
  <string>app-store</string>
  <key>teamID</key>
  <string>CV8N38BFPJ</string> <!-- Get from Apple Developer Portal -->
  <key>uploadBitcode</key>
  <false/>
  <key>uploadSymbols</key>
  <true/>

  <!-- Launch Screen Configuration -->
  <key>UILaunchStoryboardName</key>
  <string>LaunchScreen</string>
  <key>UIMainStoryboardFile</key>
  <string>Main</string>

  <!-- Supported Orientations -->
  <key>UISupportedInterfaceOrientations</key>
  <array>
    <string>UIInterfaceOrientationPortrait</string>
    <string>UIInterfaceOrientationPortraitUpsideDown</string>
    <string>UIInterfaceOrientationLandscapeLeft</string>
    <string>UIInterfaceOrientationLandscapeRight</string>
  </array>

  <!-- Media Access Permissions -->
  <key>NSPhotoLibraryUsageDescription</key>
  <string>This app needs access to your photo library to save files</string>
  <key>NSPhotoLibraryAddUsageDescription</key>
  <string>We need access to save files to your library.</string>
  <key>NSAppleMusicUsageDescription</key>
  <string>We need access to save media files.</string>
  <key>NSCameraUsageDescription</key>
  <string>Required for video playback</string>
  <key>NSMicrophoneUsageDescription</key>
  <string>Required for audio playback</string>

  <!-- Network Configuration -->
  <key>NSAppTransportSecurity</key>
  <dict>
    <key>NSAllowsArbitraryLoads</key>
    <true/>
  </dict>

  <!-- Local Network Permission for iOS 14+ -->
  <key>NSLocalNetworkUsageDescription</key>
  <string>This app needs access to the local network to play videos</string>
  <key>NSBonjourServices</key>
  <array>
    <string>_http._tcp.</string>
  </array>

  <!-- File System Access -->
  <key>UIFileSharingEnabled</key>
  <true/>
  <key>LSSupportsOpeningDocumentsInPlace</key>
  <true/>
  <key>NSFileManagerUsageDescription</key>
  <string>We need access to your files to play videos and audio</string>
  <key>NSDocumentsFolderUsageDescription</key>
  <string>We need access to your files to play videos and audio</string>

  <!-- Biometric Authentication -->
  <key>NSFaceIDUsageDescription</key>
  <string>نحتاج إلى المصادقة البيومترية لتأمين التطبيق</string>

  <!-- Background Modes -->
  <key>UIBackgroundModes</key>
  <array>
    <string>audio</string>
    <string>fetch</string>
    <string>processing</string>
  </array>

  <!-- View Controller -->
  <key>UIViewControllerBasedStatusBarAppearance</key>
  <false/>

  <!-- PiP Configuration -->
  <key>UIApplicationSupportsPictureInPicture</key>
  <true/>
  <key>AVKitPictureInPictureSupported</key>
  <true/>

  <!-- Audio Session Configuration -->
  <key>AVAudioSessionCategoryOptions</key>
  <array>
    <string>AVAudioSessionCategoryOptionMixWithOthers</string>
    <string>AVAudioSessionCategoryOptionAllowAirPlay</string>
    <string>AVAudioSessionCategoryOptionAllowBluetooth</string>
  </array>

  <!-- Background Task Configuration -->
  <key>BGTaskSchedulerPermittedIdentifiers</key>
  <array>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER).background-task</string>
  </array>

  <!-- Notifications -->
  <key>NSUserNotificationCenterUsageDescription</key>
  <string>This app needs to send you notifications</string>
  <key>UNUserNotificationCenterDelegateClassName</key>
  <string>$(PRODUCT_MODULE_NAME).NotificationDelegate</string>

  <!-- Other Keys -->
  <key>CADisableMinimumFrameDurationOnPhone</key>
  <true/>
  <key>UIApplicationSupportsIndirectInputEvents</key>
  <true/>
  
  <!-- Keychain Access Groups for flutter_secure_storage -->
  <key>keychain-access-groups</key>
  <array>
    <string>$(AppIdentifierPrefix)com.example.downloadsplatform</string>
  </array>

  <!-- Add these keys -->
  <key>UIRequiresFullScreen</key>
  <true/>
</dict>
</plist>
