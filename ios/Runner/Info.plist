<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>CFBundleDevelopmentRegion</key>
  <string>$(DEVELOPMENT_LANGUAGE)</string>
  <key>CFBundleDisplayName</key>
  <string>Downloads Platform</string>
  <key>CFBundleExecutable</key>
  <string>$(EXECUTABLE_NAME)</string>
  <key>CFBundleIdentifier</key>
  <string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
  <key>CFBundleInfoDictionaryVersion</key>
  <string>6.0</string>
  <key>CFBundleName</key>
  <string>downloadsplatform</string>
  <key>CFBundlePackageType</key>
  <string>APPL</string>
  <key>CFBundleShortVersionString</key>
  <string>$(FLUTTER_BUILD_NAME)</string>
  <key>CFBundleSignature</key>
  <string>????</string>
  <key>CFBundleVersion</key>
  <string>$(FLUTTER_BUILD_NUMBER)</string>
  <key>LSRequiresIPhoneOS</key>
  <true/>

  <!-- iPhone Only - Device Family -->
  <key>UIDeviceFamily</key>
  <array>
    <integer>1</integer>
    <!-- 1 = iPhone, 2 = iPad, both would be iPhone and iPad -->
  </array>

  <!-- Prevent iPad compatibility mode -->
  <key>UIRequiresFullScreen</key>
  <true/>
  
  <!-- Remove iPad orientations -->
  <key>UISupportedInterfaceOrientations~ipad</key>
  <array/>

  <!-- Export Options -->
  <key>method</key>
  <string>app-store</string>
  <key>teamID</key>
  <string>CV8N38BFPJ</string> <!-- Get from Apple Developer Portal -->
  <key>uploadBitcode</key>
  <false/>
  <key>uploadSymbols</key>
  <true/>

  <!-- Launch Screen Configuration -->
  <key>UILaunchStoryboardName</key>
  <string>LaunchScreen</string>
  <key>UIMainStoryboardFile</key>
  <string>Main</string>

  <!-- Supported Orientations -->
  <key>UISupportedInterfaceOrientations</key>
  <array>
    <string>UIInterfaceOrientationPortrait</string>
    <string>UIInterfaceOrientationLandscapeLeft</string>
    <string>UIInterfaceOrientationLandscapeRight</string>
  </array>

  <!-- Media Access Permissions -->
  <key>NSPhotoLibraryUsageDescription</key>
  <string>This app requires access to your photo library to save and share media files.</string>
  <key>NSPhotoLibraryAddUsageDescription</key>
  <string>This app requires access to your photo library to save and share media files.</string>
  <key>NSAppleMusicUsageDescription</key>
  <string>This app requires access to your photo library to save and share media files.</string>
  <key>NSCameraUsageDescription</key>
  <string>We need camera access to scan QR codes and take photos</string>
  <key>NSMicrophoneUsageDescription</key>
  <string>We need microphone access for video recording</string>

  <!-- Network Configuration -->
  <key>NSAppTransportSecurity</key>
  <dict>
    <key>NSAllowsArbitraryLoads</key>
    <true/>
  </dict>

  <!-- Local Network Permission for iOS 14+ -->
  <key>NSLocalNetworkUsageDescription</key>
  <string>This app needs access to the local network to play videos</string>
  <key>NSBonjourServices</key>
  <array>
    <string>_http._tcp.</string>
  </array>

  <!-- File System Access -->
  <key>UIFileSharingEnabled</key>
  <true/>
  <key>LSSupportsOpeningDocumentsInPlace</key>
  <true/>
  <key>NSFileManagerUsageDescription</key>
  <string>We need access to your files to play videos and audio</string>
  <key>NSDocumentsFolderUsageDescription</key>
  <string>We need access to your files to play videos and audio</string>

  <!-- Biometric Authentication -->
  <key>NSFaceIDUsageDescription</key>
  <string>We need to use Face ID to secure your app access</string>

  <!-- Background Modes -->
  <key>UIBackgroundModes</key>
  <array>
    <string>audio</string>
    <string>fetch</string>
    <string>remote-notification</string>
  </array>

  <!-- View Controller -->
  <key>UIViewControllerBasedStatusBarAppearance</key>
  <false/>

  <!-- PiP Configuration -->
  <key>UIApplicationSupportsPictureInPicture</key>
  <true/>
  <key>AVKitPictureInPictureSupported</key>
  <true/>

  <!-- Audio Session Configuration -->
  <key>AVAudioSessionCategoryOptions</key>
  <array>
    <string>AVAudioSessionCategoryOptionMixWithOthers</string>
    <string>AVAudioSessionCategoryOptionAllowAirPlay</string>
    <string>AVAudioSessionCategoryOptionAllowBluetooth</string>
  </array>

  <!-- Background Task Configuration -->
  <key>BGTaskSchedulerPermittedIdentifiers</key>
  <array>
    <string>$(PRODUCT_BUNDLE_IDENTIFIER).background-task</string>
  </array>

  <!-- Notifications -->
  <key>NSUserNotificationCenterUsageDescription</key>
  <string>This app needs to send you notifications</string>
  <key>UNUserNotificationCenterDelegateClassName</key>
  <string>$(PRODUCT_MODULE_NAME).NotificationDelegate</string>

  <!-- Other Keys -->
  <key>CADisableMinimumFrameDurationOnPhone</key>
  <true/>
  <key>UIApplicationSupportsIndirectInputEvents</key>
  <true/>
  
  <!-- Keychain Access Groups for flutter_secure_storage -->
  <key>keychain-access-groups</key>
  <array>
    <string>$(AppIdentifierPrefix)com.example.downloadsplatform</string>
  </array>
</dict>
</plist>
